PORT=4000

# ============================================
# MONGODB
# ============================================
# Formato: mongodb+srv://usuario:password@cluster.xxxxx.mongodb.net/nombre-db?retryWrites=true&w=majority
Mongo__Uri=mongodb+srv://usuario:password@cluster0.xxxxx.mongodb.net/cunapay?retryWrites=true&w=majority
Mongo__DbName=cunapay

# ============================================
# JWT (Autenticación)
# ============================================
